extends layouts/main

block content
	div.video_player
		video(src=`/${video.fileUrl}`)
	div.video_info
		a(href=routes.editVideo(video.id)) Edit Video
		h5.video_title=video.title
		span.video_views=video.views
		p.video_description=video.description
	div.video_comments
		if video.comments.length === 1
			span.video_comments-number 1 comment
		else
			span.video_comments-number #{video.comments.length} comments